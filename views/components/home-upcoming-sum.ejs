<div id="upcoming_sum"  class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-12 pb-3"><h3 class="text-orange section-head">Upcoming Events</h3></div>

            <% for (let i = 0; i < 4; i++) { %>
                <% let r = Math.floor((Math.random()*db.length)); %>
                <div class="col-sm-12 col-lg-3">
                    <p class="upcoming_sum_head"><%= db[r].eventDate %></p>
                    <p class="upcoming_sum_sub"><%= db[r].name.substring(0,25) %></p>
                    <button class="evntr_drk_btn">Open</button>
                </div>
            <% } %>    

        </div>
    </div>
</div>