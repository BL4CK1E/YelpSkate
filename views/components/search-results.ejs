<div id="search">
    <div id="search-results" class="container">
        <div class="row py-5">

            <% for (let i = 0; i < db.length; i++) { %>
            <div class="col-12 search-card">
                <div class="row">
                    <div class="col-8">
                        <blockquote class="blockquote p-2"><%= db[i].name %></blockquote>
                        <hr>
                        <div class="row p-2">
                            <div class="col-4">
                                <strong>Location:</strong><br>
                                <%= db[i].city + ", " + db[i].state %><br>
                                <%= db[i].streetNumber %>
                            </div>
                            <div class="col-4">
                                <strong>Category:</strong><br>
                                <%= db[i].category %><br>
                            </div>
                            <div class="col-4">
                                <strong>Date:</strong><br>
                                <%= db[i].eventDate %><br>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 d-flex flex-row align-items-center text-center">
                        <a class="w-100" href="/event/view/<%= db[i].id %>">
                            <button class="m-0">Open Event</button>
                        </a>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
    </div>
</div>    