<div class="container">
    <div class="row">
    <div class="col-12">
            <div class="p-3">
                <% for (let i = 0; i < db.comments.length; i++) { %>
                <div class="row my-2">
                    <div class="comment-img">
                        <img class="comment-img" src="https://cdn3.iconfinder.com/data/icons/galaxy-open-line-gradient-i/200/contacts-128.png" alt="">
                    </div>
                    <div class="col">
                        <strong><%- db.comments[i].author %></strong> wrote
                        <p class="mt-2 text-justify"><%- db.comments[i].comment %></p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-4 p-3">
                <div class="mb-2">
                    <strong>Post A Comment</strong>
                </div>
                <div>
                    <form class="form-addEventComment" action="/comment/<%= db._id %>" method="POST">
                        <input class="w-100 form-control my-2" type="text" name="author" id="comment" placeholder="Author">
                        <textarea class="w-100 form-control my-2" name="comment" id="comment" rows="3" placeholder="Comment"></textarea>
                        <button class="mb-2 btn btn-md btn-block btn-outline-dark">Submit Comment</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

