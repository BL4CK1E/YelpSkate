<div class="container">
    <h2 class="text-center">Upcoming Events</h2>
    <br>
    <div class="row mb-2">

        <%  for (let i = 0; i < db.events.length; i++) { %>

            <div class="col-md-6 col-lg-4">
                <a href="/view/<%= i %>">
                    <div class="evntr_card my-2 mx-sm-auto mx-md-1 my-md-3 my-xl-5">

                        <img class="evntr_img_overlay" src="<%= db.events[i].picture %>">
                        <div class="evntr_card_date text-center">
                            <h5 class="blockquote mb-0 p-1 text-bold text-uppercase">
                                <%= db.events[i].eventDate %>
                            </h5>
                        </div>
                        <div class="evntr_card_info text-center">
                            <h5 class="blockquote text-uppercase mb-0 p-1">
                                <%= db.events[i].name %>
                            </h5>
                        </div>
                    </div>
                </a>
            </div>

            <% } %>

    </div>
</div>