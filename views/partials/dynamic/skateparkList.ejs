<div class="container my-5">
    <div class="row mb-2">

        <%  for (let i = 1; i < Object.keys(db.skateparks).length; i++) { %>

            <div class="col-md-6">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="<%= db.skateparks[i].picture %>" alt="Card image cap">
                    <div class="card-body">
                        <h3 class="mb-0">
                            <a class="text-dark" href="#">
                                <%= db.skateparks[i].city %>
                            </a>
                        </h3>
                        <div class="mb-1 text-muted">
                            <%= db.skateparks[i].name %>
                        </div>
                        <p class="card-text mb-auto">
                            <%= db.skateparks[i].shortOverview %>
                        </p>
                        <a href="/home/<%=i%>">
                            More Info
                        </a>
                    </div>
                </div>
            </div>

            <% } %>

    </div>
</div>