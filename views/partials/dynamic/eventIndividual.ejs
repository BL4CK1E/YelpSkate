<div class="container my-1" style="position:relative;">
    <script>
        let pID = pID;
    </script>

    <h2 class="text-center display-4">
        <%= db.events[pID].name %>
    </h2>
    <br>
    <div class="row mb-2">
        <div class="col-md-8 d-flex">
            <div class="asc_card card mb-4">
                <div class="card-header  text-center">
                    Event Details
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <strong>Date:</strong>
                        <br>
                        <light class="mb-2 card-text mb-auto">
                            -
                            <%= db.events[pID].eventDate %>
                        </light>
                        <br>
                        <br>
                        <strong>Location:</strong>
                        <br>
                        <light class="mb-2 card-text mb-auto">
                            -
                            <%= db.events[pID].city %>,
                                <%= db.events[pID].state %>,
                                    <%= db.events[pID].streetNumber %>
                        </light>
                        <br>
                        <br>
                        <strong>Overview:</strong>
                        <br>
                        <light class="mb-2 card-text mb-auto">
                            -
                            <%= db.events[pID].shortOverview %>
                        </light>
                    </div>
                    <div>
                        <a href="/">
                            <button class="btn btn-md btn-block btn-outline-dark">Visit Website</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex">
            <div class="asc_card card mb-4">
                <div class="card-header  text-center">
                    Event Poster & Directions
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <img class="mb-4 card-img" src="<%= db.events[pID].picture %>" alt="Card image cap">

                    </div>
                    <div>
                        <a href="/">
                            <button class="btn btn-md btn-block btn-outline-dark">Directions</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header text-center">
                    Admin Panel
                </div>
                <div class="p-2">
                    <a id="deleteLink" href="/delete/<%=pID%>" onclick="del()">
                        <button class="mb-2 btn btn-md btn-block btn-danger">Delete Event</button>
                    </a>
                    <a id="editLink" href="/edit/<%=pID%>" onclick="del()">
                        <button class="btn btn-md btn-block btn-warning">Edit Event</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>