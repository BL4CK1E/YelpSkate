<%- include partials/main/header.ejs %>

    <%- include partials/main/nav.ejs %>

    <div id="evntr_header" class="mt-5">
        <div class="container">
            <div class="form-container mx-auto">
                <form class="form-signin" action="/login" method="POST">
                    <h2 class="form-signin-heading text-center">Login</h2><br>

                    <label for="username" class="sr-only">Username</label>
                    <input type="text" id="username" name="username" class="form-control" placeholder="Username" required>

                    <label for="password" class="sr-only">Password</label>
                    <input type="password" id="password" name="password" class="form-control mt-3" placeholder="Password" required>

                    <button class="btn btn-lg btn-outline-primary btn-block mt-3" type="submit">Sign in</button>

                </form>

                <a href="/register">
                    <button class="mt-3 btn btn-lg btn-outline-dark btn-block">Register</button>
                </a>

            </div>
        </div>
    </div>

