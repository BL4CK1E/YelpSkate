<%- include partials/main/header.ejs %>
    <%- include partials/main/nav.ejs %>

        <div id="evntr_header" class="d-flex align-items-center">
            <div class="container">
                <div id="register_container">

                    <form class="form-register">
                        <h2 class="form-register-heading text-center">Register</h2>
                        <br>
                        <label for="inputFullName" class="pt-1 pb-0 mb-0">Full Name</label>
                        <input type="email" id="inputFullName" class="form-control" placeholder="John Doe" required>

                        <label for="inputEmail" class="pt-1 pb-0 mb-0">Email</label>
                        <input type="email" id="inputEmail" class="form-control" placeholder="email@domain.com" required>

                        <label for="inputPassword" class="pt-1 pb-0 mb-0">Password</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>

                        <label for="inputPasswordConfirm" class="pt-1 pb-0 mb-0">Confirm Password</label>
                        <input type="passwordConfirm" id="inputPasswordConfirm" class="form-control" placeholder="Confirm Password" required>
                        <br>
                        <button class="btn btn-lg btn-outline-primary btn-block" type="submit">Register</button>
                    </form>

                    <a href="/">
                        <button class="btn btn-lg btn-outline-dark btn-block">Return Home</button>
                    </a>

                </div>
            </div>
        </div>

        <%- include partials/main/footer.ejs %>